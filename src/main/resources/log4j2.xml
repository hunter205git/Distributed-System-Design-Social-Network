<?xml version="1.0" encoding="UTF-8"?>
<Configuration name="Log4jConfiguration" status="warn"
               strict="true" schema="Log4J-V2.0.xsd">
    <Appenders>
        <NoSql name="databaseAppender">
            <MongoDb databaseName="cmpe207" collectionName="cmpe207" server="ds243963.mlab.com" port="43963" username="admin" password="pwd123" />
        </NoSql>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - ==>[%msg]%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <Root level="trace">
            <AppenderRef ref="databaseAppender" />
        </Root>
        <Logger name="com.socket" level="trace">
            <AppenderRef ref="Console"/>
        </Logger>
    </Loggers>
</Configuration>